<%= content_for :top do %>
<h1>Listing BookAttachments</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_attachments.each do |book_attachment| %>
      <tr>
        <td><%= book_attachment.scrapbook_id %></td>
        <td><%= image_tag book_attachment.image_url(:thumb) %></td>
        <td><%= link_to 'Show', book_attachment %></td>
        <td><%= link_to 'Edit', edit_book_attachment_path(book_attachment) %></td>
        <td><%= link_to 'Destroy', book_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post attachment', new_book_attachment_path %>
<% end %>