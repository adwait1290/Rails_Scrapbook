<div class="row center-align">
<%= form_for(@book_attachment, :url => book_attachment_path, :method => :put, :html => { :multipart => true}, class: "col s12 center") do |f| %>
<%= image_tag @book_attachment.image_url, class: "materialboxed", style: "margin-left:auto; margin-right:auto;max-height:50vh;" %>
<hr />
	<div class="file-field blue-text btn btn-flat waves-effect black darken-1 waves-light" style="border: 1px solid gray">

		<%= label_tag(:upload) %>
		<%= f.file_field :image, class: "validate file-path" %>
	</div>
<hr />
	<div class="actions">
		<button type="submit" value="update" class="btn btn waves-effect green waves-light"><i class="material-icons right">send</i>Update!</button>


	</div>
	<hr />
	<% end %>
</div>
