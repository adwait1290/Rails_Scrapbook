<%= content_for :top do %>
<h1 class="header center white-text">Editing Book Attachment</h1>
<div class="row">
<div class="col s12 m8 offset-m2 l6 offset-l3">
<%= render 'form' %>

<%= link_to 'Show', @book_attachment, class: "btn waves-effect green waves-light white-text" %> 
<%= link_to 'Destroy', book_attachment_path(@book_attachment.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect red waves-light white-text" %> 
<%= link_to 'Back', scrapbooks_path, class: "btn waves-effect pink waves-light white-text" %>
</div>
</div>
<% end %>